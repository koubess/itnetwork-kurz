@model Projekt.Models.Insurance

@{
    ViewData["Title"] = "Detaily";
}

<h1>Detaily pojištění</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Client)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Client.Name)
            @Html.DisplayFor(model => model.Client.Surname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InsuranceType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InsuranceType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InsurancePrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InsurancePrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InsuredObject)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InsuredObject)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InsuredFrom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InsuredFrom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InsuredTo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InsuredTo)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole(UserRoles.Admin))
    {
        <a class="text-decoration-underline text-black mx-2" asp-action="Edit" asp-route-id="@Model?.Id">Upravit</a>
    }

    <a class="text-decoration-underline text-black" asp-action="Index">Zpět na list</a>
</div>
