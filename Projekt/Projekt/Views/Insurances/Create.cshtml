@model Projekt.Models.Insurance

@{
    ViewData["Title"] = "Vytvoření";
}

<h1>Vytvoření pojištění</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClientId" class="control-label"></label>
                <select asp-for="ClientId" class ="form-control" asp-items="ViewBag.ClientId"></select>
            </div>
            <div class="form-group">
                <label asp-for="InsuranceType" class="control-label"></label>
                <input asp-for="InsuranceType" class="form-control" />
                <span asp-validation-for="InsuranceType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InsurancePrice" class="control-label"></label>
                <input asp-for="InsurancePrice" class="form-control" />
                <span asp-validation-for="InsurancePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InsuredObject" class="control-label"></label>
                <input asp-for="InsuredObject" class="form-control" />
                <span asp-validation-for="InsuredObject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InsuredFrom" class="control-label"></label>
                <input asp-for="InsuredFrom" class="form-control" />
                <span asp-validation-for="InsuredFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InsuredTo" class="control-label"></label>
                <input asp-for="InsuredTo" class="form-control" />
                <span asp-validation-for="InsuredTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Vytvořit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Zpět na list</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
