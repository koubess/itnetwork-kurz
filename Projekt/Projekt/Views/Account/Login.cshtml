@model LoginViewModel
@{
    ViewData["Title"] = "Přihlašení";
}

<div class="row">
    <div class="col-md-4">
        <form class="d-flex flex-column my-3 gap-2" asp-route-returnUrl="@ViewData["ReturnUrl"]">
            <div asp-validation-summary="All" class="text-dark">
                <div class="form-group">
                    <label asp-for="Email" class="form-label"></label>
                    <input id="Email" asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-dark"></span>
                </div>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input id="Password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-dark"></span>
            </div>
            <div class="form-check">
                <input asp-for="RememberMe" class="form-check-input">
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Přihlásit se</button>
            </div>
            <a asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]">Registrace</a>            
        </form>
        
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


